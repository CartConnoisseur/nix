(defwindow music [pos gaps]
    :monitor "<primary>"
    :geometry (geometry
        :x {
            pos == "right"
                ? gaps == "true"
                    ? "-8px" : "2px"
                : "0px"
        }
        :y { gaps == "true" ? "-8px" : "2px" }
        :width 512
        :anchor { pos == "right" ? "bottom right" : "bottom center" }
    )
    :stacking "fg"
    :windowtype "dock"
    :wm-ignore true

    (music)
)